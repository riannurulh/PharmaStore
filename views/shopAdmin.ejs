<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Custom styles */
        @keyframes typing {
          0% {
            width: 0;
          }
          100% {
            width: 100%;
          }
        }
      </style>
</head>

<body class="bg-gray-100">
    <nav class="bg-blue-600 text-white py-4">
        <div class="container mx-auto flex justify-between items-center px-6">
            <h1 class="text-2xl font-bold">Pharma-Store</h1>
            <div>
                <a href="/add"
                    class="inline-block px-4 py-2 rounded-lg bg-white text-blue-600 font-semibold mr-4 hover:bg-blue-100 transition">Add New Items</a>
                <a href="/logout"
                    class="inline-block px-4 py-2 rounded-lg bg-white text-blue-600 font-semibold hover:bg-blue-100 transition">Log
                    Out</a>
            </div>
        </div>
    </nav>
    <% if (deleted) { %>
        <p style="color: red;"><%= deleted %></p>
    <% } %>
    <section class="container mx-auto py-16 px-6">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-4xl font-bold">Our Product</h2>
            <form action="#" method="get" class="relative flex-1 max-w-lg">
                <input name="search" type="text" placeholder="Search products..."
                    class="pl-4 pr-12 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-600 text-lg w-full"
                    style="font-size: 1.2rem;">
                <button type="submit"
                    class="absolute right-3 top-1/2 transform -translate-y-1/2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">Cari</button>
            </form>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Products Grid -->
            <% products.forEach(element => { %>
            <div
                class="bg-white p-6 rounded-lg shadow-lg transition-transform hover:shadow-xl hover:scale-105 flex flex-col justify-between">
                <img src="https://via.placeholder.com/300" alt="Product 1"
                    class="h-40 w-full object-cover mb-4 rounded-lg">
                <div class="text-center">
                    <h3 class="text-xl font-bold mb-2"><%= element.name %></h3>
                    <p class="text-gray-600 mb-2"><%= formatIDR(element.priceFormat) %></p>
                    <a href="/deleteItem/<%= element.id %>"
                        class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">Delete Item</a>
                </div>
            </div>
            <% }) %>
            <!-- Repeat for more products -->
        </div>
    </section>
</body>

</html>
